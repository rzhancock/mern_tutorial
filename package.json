{
  "name": "mern-tutorial",
  "version": "1.0.0",
  "description": "MERN stack tutorial by Brad Traversy",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "set PORT=3006 && npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "postbuild-heroku": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "Robert Hancock",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^3.6.0",
    "create-react-app": "^1.5.2",
    "express": "^4.16.3",
    "mongoose": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^1.17.5"
  }
}
